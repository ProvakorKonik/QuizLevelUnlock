<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LevelAdd">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:paddingHorizontal="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/level_add_imageview"
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="40dp"
                    android:background="#222d"/>

                <EditText
                    android:id="@+id/level_add_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/ripple_text_back"
                    android:padding="10dp"
                    android:ems="10"
                    android:hint="Level Name"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />





                <EditText
                    android:id="@+id/level_add_total_question_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Total Question"
                    android:background="@drawable/ripple_text_back"
                    android:padding="10dp"
                    android:inputType="number"
                    android:layout_marginTop="15dp"
                    />
                <EditText
                    android:id="@+id/level_add_minimum_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/ripple_text_back"
                    android:padding="10dp"
                    android:hint="Minimum Score"
                    android:inputType="number"
                    android:layout_marginTop="15dp"
                    />
                <EditText
                    android:id="@+id/level_add_coins_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/ripple_text_back"
                    android:padding="10dp"
                    android:hint="Gift Coins"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:inputType="numberDecimal"
                    />



                <EditText
                    android:id="@+id/level_add_duration_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Exam Duration"
                    android:background="@drawable/ripple_text_back"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:inputType="numberDecimal"
                    />






                <Button
                    android:id="@+id/level_add_update_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"

                    android:paddingHorizontal="50dp"
                    android:text="UPDATE" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>