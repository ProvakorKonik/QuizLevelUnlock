<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:id="@+id/cardview_level_d_item"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/level_e_imagecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:layout_marginHorizontal="10dp"
            cardview:cardCornerRadius="20dp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/level_d_item_img"
                android:layout_width="130dp"
                android:layout_height="170dp"
                android:background="#222d"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/level_d_title_id"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:paddingVertical="5dp"
                android:background="@color/purple_700"
                android:text="Level One"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/level_d_titfle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Level One"
            android:visibility="gone"
            android:textColor="#2d2d2d"
            android:textSize="16sp"
            android:textStyle="bold"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/level_e_imagecard" />

        <!---->

        <TextView
            android:id="@+id/level_d_bio_text"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="5"
            android:text="info details"

            android:textAlignment="center"
            android:visibility="gone"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/level_d_titfle_id" />

        <androidx.cardview.widget.CardView
            android:id="@+id/level_e_imag5ecard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"

            cardview:cardCornerRadius="15dp"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintStart_toStartOf="@+id/level_d_mandatory_socre_text"
            cardview:layout_constraintTop_toBottomOf="@+id/level_d_mandatory_socre_text">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/purple_200"
                android:paddingVertical="5dp"
                android:src="@drawable/ic_baseline_emoji_events_24"
                cardview:tint="@color/white" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/level_d_rank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank List"
            android:textSize= "14sp"
            android:layout_marginLeft="10dp"
            cardview:layout_constraintBottom_toBottomOf="@+id/level_e_imag5ecard"
            cardview:layout_constraintStart_toEndOf="@+id/level_e_imag5ecard"
            cardview:layout_constraintTop_toTopOf="@+id/level_e_imag5ecard" />

        <TextView
            android:id="@+id/level_d_mandatory_socre_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Score 32"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/level_e_imagecard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>